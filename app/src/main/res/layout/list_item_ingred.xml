<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_ingred"

        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size"
        android:layout_marginTop="@dimen/margin_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/margin_size"


        android:layout_marginBottom="@dimen/margin_size"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        app:layout_constraintBottom_toBottomOf="@+id/tv_ingred"
        app:layout_constraintStart_toEndOf="@+id/tv_ingred"


        app:layout_constraintTop_toTopOf="@+id/tv_ingred"

        />

    <TextView
        android:id="@+id/tv_measuring"
        android:layout_width="0dp"

        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
        app:layout_constraintStart_toEndOf="@+id/tv_amount"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="@+id/tv_amount" />

</android.support.constraint.ConstraintLayout>